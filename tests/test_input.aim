# test_input.aim
# Test interactive input and int conversion

def test_int_conversion():
    print("=== INT CONVERSION ===")
    s = "42"
    n = int(s)
    print("int('42') = " + str(n))
    
    doubled = n * 2
    print("doubled = " + str(doubled))
    
    neg = "-123"
    neg_n = int(neg)
    print("int('-123') = " + str(neg_n))
end

def test_math_builtins():
    print("=== MATH BUILTINS ===")
    
    a = -5
    b = abs(a)
    print("abs(-5) = " + str(b))
    
    x = 10
    y = 3
    bigger = max(x, y)
    print("max(10, 3) = " + str(bigger))
    
    smaller = min(x, y)
    print("min(10, 3) = " + str(smaller))
end

def test_input_basic():
    print("=== INPUT TEST ===")
    print("Enter your name:")
    name = input("")
    print("Hello, " + name + "!")
    
    print("Enter a number:")
    num_str = input("")
    num = int(num_str)
    doubled = num * 2
    print("Doubled: " + str(doubled))
end

def main():
    test_int_conversion()
    print("")
    test_math_builtins()
    print("")
    # Uncomment to test interactive input:
    test_input_basic()
    print("=== ALL QUICK WINS TESTED ===")
end