# test_string_methods.aim
# Test all 15 string methods that are wired in Gen_MapMethod

def main():
    print("=== STRING METHOD TESTS ===")
    print("")
    
    # Test 1: upper()
    print("TEST 1: upper()")
    s1 = "hello world"
    result = s1.upper()
    print("  'hello world'.upper() =", result)
    
    # Test 2: lower()
    print("TEST 2: lower()")
    s2 = "HELLO WORLD"
    result = s2.lower()
    print("  'HELLO WORLD'.lower() =", result)
    
    # Test 3: strip()
    print("TEST 3: strip()")
    s3 = "  padded  "
    result = s3.strip()
    print("  '  padded  '.strip() = [", result, "]")
    
    # Test 4: lstrip()
    print("TEST 4: lstrip()")
    s4 = "  left padded"
    result = s4.lstrip()
    print("  '  left padded'.lstrip() = [", result, "]")
    
    # Test 5: rstrip()
    print("TEST 5: rstrip()")
    s5 = "right padded  "
    result = s5.rstrip()
    print("  'right padded  '.rstrip() = [", result, "]")
    
    # Test 6: split()
    print("TEST 6: split()")
    s6 = "one,two,three"
    parts = s6.split(",")
    print("  'one,two,three'.split(',') =")
    i = 0
    count = len(parts)
    while i < count:
        print("    [", i, "]:", parts[i])
        i += 1
    end
    
    # Test 7: join()
    print("TEST 7: join()")
    words = ["a", "b", "c"]
    sep = "-"
    result = sep.join(words)
    print("  '-'.join(['a','b','c']) =", result)
    
    # Test 8: replace()
    print("TEST 8: replace()")
    s8 = "hello world"
    result = s8.replace("world", "there")
    print("  'hello world'.replace('world','there') =", result)
    
    # Test 9: find()
    print("TEST 9: find()")
    s9 = "hello world"
    pos = s9.find("world")
    print("  'hello world'.find('world') =", pos)
    pos2 = s9.find("xyz")
    print("  'hello world'.find('xyz') =", pos2)
    
    # Test 10: startswith()
    print("TEST 10: startswith()")
    s10 = "hello world"
    r1 = s10.startswith("hello")
    r2 = s10.startswith("world")
    print("  'hello world'.startswith('hello') =", r1)
    print("  'hello world'.startswith('world') =", r2)
    
    # Test 11: endswith()
    print("TEST 11: endswith()")
    s11 = "hello world"
    r1 = s11.endswith("world")
    r2 = s11.endswith("hello")
    print("  'hello world'.endswith('world') =", r1)
    print("  'hello world'.endswith('hello') =", r2)
    
    # Test 12: count()
    print("TEST 12: count()")
    s12 = "abracadabra"
    c = s12.count("a")
    print("  'abracadabra'.count('a') =", c)
    
    # Test 13: isdigit()
    print("TEST 13: isdigit()")
    d1 = "12345"
    d2 = "123a5"
    r1 = d1.isdigit()
    r2 = d2.isdigit()
    print("  '12345'.isdigit() =", r1)
    print("  '123a5'.isdigit() =", r2)
    
    # Test 14: isalpha()
    print("TEST 14: isalpha()")
    a1 = "hello"
    a2 = "hello1"
    r1 = a1.isalpha()
    r2 = a2.isalpha()
    print("  'hello'.isalpha() =", r1)
    print("  'hello1'.isalpha() =", r2)
    
    # Test 15: isalnum()
    print("TEST 15: isalnum()")
    an1 = "hello123"
    an2 = "hello 123"
    r1 = an1.isalnum()
    r2 = an2.isalnum()
    print("  'hello123'.isalnum() =", r1)
    print("  'hello 123'.isalnum() =", r2)
    
    print("")
    print("=== ALL STRING METHOD TESTS COMPLETE ===")
end