# test_enumerate_zip.aim
# Test enumerate() and zip() functions

def main():
    print("=" * 40)
    print("ENUMERATE AND ZIP TESTS")
    print("=" * 40)
    
    # =========================================
    # TEST 1: enumerate()
    # =========================================
    print("\n[1] ENUMERATE")
    
    fruits = ["apple", "banana", "cherry"]
    print("fruits = ['apple', 'banana', 'cherry']")
    
    # enumerate returns list of [index, value] pairs
    pairs = enumerate(fruits)
    print("enumerate(fruits):")
    
    for pair in pairs:
        idx = pair[0]
        val = pair[1]
        print(idx, "->", val)
    end
    
    # =========================================
    # TEST 2: enumerate with numbers
    # =========================================
    print("\n[2] ENUMERATE WITH NUMBERS")
    
    nums = [10, 20, 30, 40]
    print("nums = [10, 20, 30, 40]")
    
    for pair in enumerate(nums):
        i = pair[0]
        n = pair[1]
        print("Index", i, "has value", n)
    end
    
    # =========================================
    # TEST 3: zip()
    # =========================================
    print("\n[3] ZIP")
    
    names = ["Alice", "Bob", "Charlie"]
    scores = [85, 92, 78]
    print("names = ['Alice', 'Bob', 'Charlie']")
    print("scores = [85, 92, 78]")
    
    zipped = zip(names, scores)
    print("zip(names, scores):")
    
    for pair in zipped:
        name = pair[0]
        score = pair[1]
        print(name, "scored", score)
    end
    
    # =========================================
    # TEST 4: zip with different lengths
    # =========================================
    print("\n[4] ZIP DIFFERENT LENGTHS")
    
    a = [1, 2, 3, 4, 5]
    b = [10, 20, 30]
    print("a = [1,2,3,4,5], b = [10,20,30]")
    print("zip stops at shorter list:")
    
    for pair in zip(a, b):
        print(pair[0], "+", pair[1], "=", pair[0] + pair[1])
    end
    
    # =========================================
    # TEST 5: Combined usage
    # =========================================
    print("\n[5] COMBINED: enumerate + operations")
    
    values = [100, 200, 300]
    total = 0
    
    for pair in enumerate(values):
        idx = pair[0]
        val = pair[1]
        total = total + val
        print("After index", idx, "total =", total)
    end
    
    print("Final total:", total)
    
    print("\n" + "=" * 40)
    print("ALL TESTS COMPLETE!")
    print("=" * 40)
end