// Library.AIMacroCodeGen1.ailang
// AILang Code Generator - Part 1: State, Init, Helpers, Output
//
// Dependencies: XArrays, AIMacroCore, AIMacroParserCore

LibraryImport.XArrays
LibraryImport.TArrays
LibraryImport.AIMacroCore
LibraryImport.AIMacroParserCore

// =============================================================================
// CODE GENERATOR STATE
// =============================================================================
FixedPool.Gen {
    "output": Initialize=0, CanChange=True   
    "indent": Initialize=0, CanChange=True    
    "temp_counter": Initialize=0, CanChange=True
    "param_names": Initialize=0, CanChange=True
    "string_vars": Initialize=0, CanChange=True 
    "list_vars": Initialize=0, CanChange=True
    "dict_vars": Initialize=0, CanChange=True
    "packed_funcs": Initialize=0, CanChange=True
}

// =============================================================================
// INITIALIZATION
// =============================================================================
Function.Gen_Init {
    Body: {
        Gen.output = XArray.XCreate(256)
        Gen.indent = 0
        Gen.temp_counter = 0
        Gen.param_names = XArray.XCreate(16)
        Gen.string_vars = XArray.XCreate(32)
        Gen.list_vars = XArray.XCreate(32)
        Gen.dict_vars = XArray.XCreate(32)
        Gen.packed_funcs = XArray.XCreate(16)
    }
}

Function.Gen_Free {
    Body: {
        IfCondition NotEqual(Gen.output, 0) ThenBlock: {
            n = XArray.XSize(Gen.output)
            i = 0
            WhileLoop LessThan(i, n) {
                s = XArray.XGet(Gen.output, i)
                IfCondition NotEqual(s, 0) ThenBlock: {
                    Deallocate(s, 0)
                }
                i = Add(i, 1)
            }
            XArray.XDestroy(Gen.output)
        }
        IfCondition NotEqual(Gen.param_names, 0) ThenBlock: {
            XArray.XDestroy(Gen.param_names)
        }
        IfCondition NotEqual(Gen.string_vars, 0) ThenBlock: {
            XArray.XDestroy(Gen.string_vars)
        }
        IfCondition NotEqual(Gen.list_vars, 0) ThenBlock: {
            XArray.XDestroy(Gen.list_vars)
        }
        IfCondition NotEqual(Gen.dict_vars, 0) ThenBlock: {
            XArray.XDestroy(Gen.dict_vars)
        }
        IfCondition NotEqual(Gen.packed_funcs, 0) ThenBlock: {
            XArray.XDestroy(Gen.packed_funcs)
        }
    }
}


// =============================================================================
// CHECK IF FUNCTION REQUIRES PACKED ARGUMENTS (>6 params)
// =============================================================================
Function.Gen_IsPackedFunc {
    Input: name: Address
    Output: Integer
    Body: {
        IfCondition EqualTo(name, 0) ThenBlock: {
            ReturnValue(0)
        }
        
        sz = XArray.XSize(Gen.packed_funcs)
        
        // DEBUG
        PrintMessage("Gen_IsPackedFunc: checking '")
        PrintString(name)
        PrintMessage("' against ")
        PrintNumber(sz)
        PrintMessage(" entries\n")
        
        idx = 0
        WhileLoop LessThan(idx, sz) {
            fname = XArray.XGet(Gen.packed_funcs, idx)
            
            // DEBUG
            PrintMessage("  comparing to '")
            PrintString(fname)
            PrintMessage("'\n")
            
            cmp = StringCompare(name, fname)
            IfCondition EqualTo(cmp, 0) ThenBlock: {
                PrintMessage("  MATCH!\n")
                ReturnValue(1)
            }
            idx = Add(idx, 1)
        }
        ReturnValue(0)
    }
}

// =============================================================================
// TEMP NAME GENERATION - Clean names, reset per function
// =============================================================================
Function.Gen_IsStringVar {
    Input: name: Address
    Output: Integer
    Body: {
        IfCondition EqualTo(name, 0) ThenBlock: {
            PrintMessage("[IsStringVar] name is NULL\n")
            ReturnValue(0)
        }
        
        sz = XArray.XSize(Gen.string_vars)
        
        // DEBUG: Show what we're checking
        PrintMessage("[IsStringVar] Checking '")
        PrintString(name)
        PrintMessage("' against ")
        PrintNumber(sz)
        PrintMessage(" registered vars: ")
        
        // List all registered vars
        dbg_i = 0
        WhileLoop LessThan(dbg_i, sz) {
            dbg_var = XArray.XGet(Gen.string_vars, dbg_i)
            PrintMessage("'")
            PrintString(dbg_var)
            PrintMessage("' ")
            dbg_i = Add(dbg_i, 1)
        }
        PrintMessage("\n")
        
        // Actual lookup
        idx = 0
        WhileLoop LessThan(idx, sz) {
            varname = XArray.XGet(Gen.string_vars, idx)
            cmp = StringCompare(name, varname)
            IfCondition EqualTo(cmp, 0) ThenBlock: {
                PrintMessage("[IsStringVar] FOUND '")
                PrintString(name)
                PrintMessage("' at index ")
                PrintNumber(idx)
                PrintMessage("\n")
                ReturnValue(1)
            }
            idx = Add(idx, 1)
        }
        
        PrintMessage("[IsStringVar] NOT FOUND '")
        PrintString(name)
        PrintMessage("'\n")
        ReturnValue(0)
    }
}

Function.Gen_MarkStringVar {
    Input: name: Address
    Body: {
        IfCondition EqualTo(name, 0) ThenBlock: {
            PrintMessage("[MarkStringVar] name is NULL - skipping\n")
            ReturnValue(0)
        }
        
        // DEBUG: Show what we're marking
        PrintMessage("[MarkStringVar] Attempting to mark '")
        PrintString(name)
        PrintMessage("'\n")
        
        // Check if already tracked
        already = Gen_IsStringVar(name)
        IfCondition EqualTo(already, 1) ThenBlock: {
            PrintMessage("[MarkStringVar] '")
            PrintString(name)
            PrintMessage("' already registered - skipping\n")
            ReturnValue(0)
        }
        
        // Copy the name and add to list
        len = StringLength(name)
        copy = Allocate(Add(len, 1))
        i = 0
        WhileLoop LessThan(i, len) {
            c = GetByte(name, i)
            SetByte(copy, i, c)
            i = Add(i, 1)
        }
        SetByte(copy, len, 0)
        
        XArray.XPush(Gen.string_vars, copy)
        
        // DEBUG: Confirm registration
        new_sz = XArray.XSize(Gen.string_vars)
        PrintMessage("[MarkStringVar] REGISTERED '")
        PrintString(name)
        PrintMessage("' - now have ")
        PrintNumber(new_sz)
        PrintMessage(" string vars\n")
    }
}

